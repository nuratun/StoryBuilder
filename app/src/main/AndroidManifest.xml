<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tahastudio.storybuilder" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/SBTheme.Base" >
        <activity
            android:name=".StoryBuilderMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateStory"
            android:label="@string/title_activity_create_story"
            android:parentActivityName=".StoryBuilderMain" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tahastudio.storybuilder.StoryBuilderMain" />
        </activity>
        <activity
            android:name=".AddCharacters"
            android:label="@string/title_activity_add_characters"
            android:parentActivityName=".CreateStory" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tahastudio.storybuilder.CreateStory" />
        </activity>
        <activity
            android:name=".AddPlotline"
            android:label="@string/title_activity_add_plotline"
            android:parentActivityName=".CreateStory" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tahastudio.storybuilder.CreateStory" />
        </activity>
        <activity
            android:name=".AddPlaces"
            android:label="@string/title_activity_add_places"
            android:parentActivityName=".CreateStory" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tahastudio.storybuilder.CreateStory" />
        </activity>
        <activity
            android:name=".AddCharacter"
            android:label="@string/title_activity_add_character"
            android:parentActivityName=".AddCharacters" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tahastudio.storybuilder.AddCharacters" />
        </activity>
    </application>

</manifest>
