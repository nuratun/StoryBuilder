<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tahastudio.storybuilder">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/StoryBuilderTheme"
        android:largeHeap="true">

        <activity
            android:name=".ui.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StoryBuilderMain"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAINACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ShowStory"
            android:label="@string/title_activity_create_story"
            android:parentActivityName=".StoryBuilderMain">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="tahastudio.storybuilder.StoryBuilderMain" />
        </activity>
    </application>

</manifest>
