<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:dither="true">
            <corners android:radius="4dp"/>
            <solid android:color="@color/cards" />
        </shape>
    </item>
    <item android:bottom="5dp">
        <shape
            android:shape="rectangle"
            android:dither="true">
            <corners android:radius="4dp" />
            <solid android:color="@color/cards" />
            <padding
                android:bottom="4dp"
                android:left="8dp"
                android:right="8dp"
                android:top="4dp" />
        </shape>
    </item>
</layer-list>