<LinearLayout
    android:id="@+id/add_story"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Dialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/dialog_instructions"
        android:textAllCaps="true"
        android:textColor="@color/primary_text_light"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:drawableStart="@drawable/ic_create_story"
        android:drawablePadding="15dp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/sb_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionNext"
        android:inputType="textCapWords"
        android:hint="@string/dialog_title" />

    <Spinner
        android:id="@+id/sb_genre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_dialog_genre"
        android:hint="@string/dialog_genre" />

    <EditText
        android:id="@+id/sb_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine|textCapSentences"
        android:hint="@string/dialog_desc" />
</LinearLayout>
