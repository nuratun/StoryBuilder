<LinearLayout
    android:id="@+id/add_story"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPopUp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/dialog_instructions"
        android:drawableStart="@drawable/ic_create_story"
        android:gravity="center"
        android:textColor="@color/colorPopupText"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/sb_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorPopupTextHint"
        android:drawableStart="@drawable/ic_dialog_title"
        android:drawablePadding="10dp"
        android:hint="@string/dialog_title" />

    <Spinner
        android:id="@+id/sb_genre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_dialog_genre"
        android:textColorHint="@color/colorPopupTextHint"
        android:hint="@string/dialog_genre"
        android:layout_margin="15dp" />

    <EditText
        android:id="@+id/sb_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_dialog_synopsis"
        android:drawablePadding="10dp"
        android:textColorHint="@color/colorPopupTextHint"
        android:hint="@string/dialog_desc" />


</LinearLayout>
